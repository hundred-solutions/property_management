<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="property_report_pdf_template">
        <t t-call="web.basic_layout">
            <div class="page">
                <h1 style="text-align:center;text-decoration:underline;">Property Report</h1>

                <br/>
                <table class="table table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-start">Product name</th>
                            <th class="text-start">Issue date</th>
                            <t t-if="flag == 1">
                                <th>Issued to</th>
                            </t>
                            <th>Qty.</th>
                            <th>Given condition</th>
                            <th>Returned</th>
                            <th class="text-start">Return date</th>
                            <th>Return condition</th>

                        </tr>
                    </thead>
                    <tbody>


                        <t t-if="flag == 0">
                            <h4>
                                <span>Employee Name:</span>
                                <t t-esc="name"></t>
                            </h4>
                            <h4>
                                <span>Department:</span>
                                <t t-esc="department"/>
                            </h4>
                            <h4>
                                <span>Phone No.:</span>
                                <t t-esc="mobile"/>
                            </h4>
                            <br/>
                            <t t-foreach="properties" t-as="data">
                                <t t-if="data">
                                    <tr>
                                        <td class="text-end">
                                            <t t-out="data['name']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['assign_date']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['qty']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['given_condition']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['returned']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['return_date']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['return_condition']"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </t>
                        <t t-if="flag == 1">
                            <h4>
                                <span>Department:</span>
                                <t t-esc="name"></t>
                            </h4>

                            <br/>
                            <t t-foreach="properties" t-as="data">
                                <t t-if="data">
                                    <tr>
                                        <td class="text-end">
                                            <t t-out="data['name']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['assign_date']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['given_to']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['qty']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['given_condition']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['returned']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['return_date']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="data['return_condition']"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
            <t t-if="flag == 1">
                <div style="border-top: 1px solid black;margin-top:6rem;padding-top:3rem;">

                    <h5>
                        <span>Total issued product qty =</span>
                        <t t-esc="issued_count"/>
                    </h5>
                    <h5>
                        <span>Total return product qty =</span>
                        <t t-esc="return_count"/>
                    </h5>
                    <h5>
                        <span>Total damage product qty =</span>
                        <t t-esc="damage_count"/>
                    </h5>

                </div>
            </t>
        </t>
    </template>

</odoo>
