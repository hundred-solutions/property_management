<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="property_report_form" model="ir.ui.view">
        <field name="name">PROPERTY.report.form</field>
        <field name="model">property.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report">
                <group>
                    <field name="department"/>
                    <br/>
                    <field name="employee"/>
                </group>
                <footer>
                    <button string="Property Report" class="btn btn-primary" type="object"
                            name="property_report" icon="fa-file"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="property_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Property report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">property.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem name="Property Report" id="property_report_menu_id" action="property_report_wizard_action"
              parent="hr.menu_hr_root"
              sequence="27"/>
</odoo>